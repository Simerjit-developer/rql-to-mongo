{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ]
}